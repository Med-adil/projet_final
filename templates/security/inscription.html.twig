



{% block body %} 
<style>
    @import url("https://fonts.googleapis.com/css2?family=Quicksand&display=swap");

    .custom-btn {
        width: 120px;
        height: 30px;
      
      
        border: 2px solid #000;
       
        font-weight: 500;
        background: transparent;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
       
      }
    h1 {
        font-family: Quicksand;
      }
    .btn-15 {
        background: #000;
       color: #fff;
       z-index: 1;
     }
     .btn-15:after {
       position: absolute;
       content: "";
       width: 0;
       height: 100%;
       top: 0;
       right: 0;
       z-index: -1;
        background: #e0e5ec;
       transition: all 0.3s ease;
         border-radius: 0.25rem;
      
     
     }
     
     .btn-15:hover {
       color: #000;
     
     }
     .btn-15:hover:after {
       left: 0;
       width: 100%;
     }
     .btn-15:active {
       top: 2px;
     }


    </style>
<script src="https://cdn.tailwindcss.com"></script>
      <div class='border border-black'>
      
        {{ form_start(form) }}
        {{ form_row(form.email) }}
        {{ form_row(form.plainPassword, {
          label: 'Password'
      }) }}

  
  
      <button class =' custom-btn' type="submit"> Inscription </button>
      {{ form_end(form) }}
     
        </div>
{% endblock %}